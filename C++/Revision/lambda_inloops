#include<iostream>
using namespace std;
int main() {
  for (int i = 1; i <= 3; i++) {
    auto show = [i]() {
      cout << "Number: " << i << "\n";
    };
    show();
  }
  return 0;
}
//  []-> Captures the given input (Copy).To give a lambda access to variables outside of it
//  ()-> Parametric part
//. {}-> Functional part